<Window x:Class="GangstaWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GangstaWpf"
        mc:Ignorable="d"
        Title="Gangsta Simulator" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock x:Name="TitleTextBlock" Text="Gangsta Simulator" FontSize="24" FontWeight="Bold"/>
            <TextBlock x:Name="StatusTextBlock" FontSize="16" Margin="0,10,0,0"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" Height="100" Margin="10">
            <TextBlock x:Name="ResultTextBlock" TextWrapping="Wrap"/>
        </ScrollViewer>

        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="5">
                <Button x:Name="AttackButton" Content="Attack" Click="AttackButton_Click" Margin="0,5" HorizontalAlignment="Stretch"/>
                <Button x:Name="StealButton" Content="Steal" Click="StealButton_Click" Margin="0,5" HorizontalAlignment="Stretch"/>
                <Button x:Name="HealButton" Content="Heal" Click="HealButton_Click" Margin="0,5" HorizontalAlignment="Stretch"/>
                <Button x:Name="EquipButton" Content="Equip Weapon" Click="EquipButton_Click" Margin="0,5" HorizontalAlignment="Stretch"/>
                <Button x:Name="ArmorButton" Content="Buy Armor" Click="ArmorButton_Click" Margin="0,5" HorizontalAlignment="Stretch"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="5">
                <Button x:Name="CheckStatusButton" Content="Check Status" Click="CheckStatusButton_Click" Margin="0,5" HorizontalAlignment="Stretch"/>
                <Button x:Name="JoinGangButton" Content="Join Gang" Click="JoinGangButton_Click" Margin="0,5" HorizontalAlignment="Stretch"/>
                <Button x:Name="LeaveGangButton" Content="Leave Gang" Click="LeaveGangButton_Click" Margin="0,5" HorizontalAlignment="Stretch"/>
                <Button x:Name="BankHeistButton" Content="Bank Heist" Click="BankHeistButton_Click" Margin="0,5" HorizontalAlignment="Stretch"/>
                <Button x:Name="ShowModInfoButton" Content="Show Mod Info" Click="ShowModInfoButton_Click" Margin="0,5" HorizontalAlignment="Stretch"/>
                <Button x:Name="SaveButton" Content="Save Game" Click="SaveButton_Click" Margin="0,5" HorizontalAlignment="Stretch"/>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="3" Margin="10">
            <Button x:Name="ExitButton" Content="Exit" Click="ExitButton_Click" HorizontalAlignment="Stretch"/>
        </StackPanel>
        
        <!-- Armor selection panel (hidden by default) -->
        <StackPanel x:Name="ArmorSelectionPanel" Grid.Row="3" Margin="10" Visibility="Collapsed">
            <TextBlock Text="Select Armor:" FontWeight="Bold" Margin="0,0,0,5"/>
            <Button x:Name="Armor1Button" Content="Leather Jacket ($30)" Click="ArmorSelection_Click" Tag="1" Margin="0,2"/>
            <Button x:Name="Armor2Button" Content="Bulletproof Vest ($60)" Click="ArmorSelection_Click" Tag="2" Margin="0,2"/>
            <Button x:Name="Armor3Button" Content="Riot Helmet ($90)" Click="ArmorSelection_Click" Tag="3" Margin="0,2"/>
            <Button x:Name="Armor4Button" Content="Military Armor ($200)" Click="ArmorSelection_Click" Tag="4" Margin="0,2"/>
            <Button x:Name="Armor5Button" Content="Bone Armor ($500)" Click="ArmorSelection_Click" Tag="5" Margin="0,2"/>
            <Button x:Name="CancelButton" Content="Cancel" Click="CancelButton_Click" Margin="0,5"/>
        </StackPanel>
        
        <!-- Hidden element for screen reader announcements -->
        <TextBox x:Name="ScreenReaderAnnouncer" 
                 Height="0" 
                 Width="0" 
                 Opacity="0" 
                 IsReadOnly="True" 
                 Visibility="Hidden"/>
        
        <!-- Crowd choice panel (hidden by default) -->
        <StackPanel x:Name="CrowdChoicePanel" Grid.Row="3" Margin="10" Visibility="Collapsed">
            <TextBlock Text="A crowd gathers! Do you want to attack one of them?" FontWeight="Bold" Margin="0,0,0,5"/>
            <Button x:Name="AttackCrowdButton" Content="Attack Crowd" Click="AttackCrowdButton_Click" Margin="0,2"/>
            <Button x:Name="AvoidCrowdButton" Content="Avoid Crowd" Click="AvoidCrowdButton_Click" Margin="0,2"/>
        </StackPanel>
        
        <!-- Mod info panel (hidden by default) -->
        <Grid x:Name="ModInfoPanel" Grid.Row="2" Margin="10" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0" Text="Mod Information" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
            
            <ScrollViewer Grid.Row="1" Height="200">
                <TextBox x:Name="ModInfoTextBox" 
                         TextWrapping="Wrap" 
                         IsReadOnly="True" 
                         Background="Transparent" 
                         BorderThickness="0"
                         AutomationProperties.Name="Mod Information"/>
            </ScrollViewer>
            
            <Button Grid.Row="2" x:Name="CloseModInfoButton" Content="Close (ESC)" Click="CloseModInfoButton_Click" Margin="0,10,0,0" HorizontalAlignment="Center"/>
        </Grid>
        
        <!-- Gang selection panel (hidden by default) -->
        <StackPanel x:Name="GangSelectionPanel" Grid.Row="3" Margin="10" Visibility="Collapsed">
            <TextBlock Text="Select Gang:" FontWeight="Bold" Margin="0,0,0,5"/>
            <Button x:Name="Gang1Button" Content="Gang 1" Click="GangSelection_Click" Tag="1" Margin="0,2"/>
            <Button x:Name="Gang2Button" Content="Gang 2" Click="GangSelection_Click" Tag="2" Margin="0,2"/>
            <Button x:Name="Gang3Button" Content="Gang 3" Click="GangSelection_Click" Tag="3" Margin="0,2"/>
            <Button x:Name="Gang4Button" Content="Gang 4" Click="GangSelection_Click" Tag="4" Margin="0,2"/>
            <Button x:Name="Gang5Button" Content="Gang 5" Click="GangSelection_Click" Tag="5" Margin="0,2"/>
            <Button x:Name="CancelGangButton" Content="Cancel" Click="CancelGangButton_Click" Margin="0,5"/>
        </StackPanel>
        
        <!-- Weapon selection panel (hidden by default) -->
        <StackPanel x:Name="WeaponSelectionPanel" Grid.Row="3" Margin="10" Visibility="Collapsed">
            <TextBlock Text="Select Weapon:" FontWeight="Bold" Margin="0,0,0,5"/>
            <Button x:Name="Weapon1Button" Content="Weapon 1" Click="WeaponSelection_Click" Tag="1" Margin="0,2"/>
            <Button x:Name="Weapon2Button" Content="Weapon 2" Click="WeaponSelection_Click" Tag="2" Margin="0,2"/>
            <Button x:Name="Weapon3Button" Content="Weapon 3" Click="WeaponSelection_Click" Tag="3" Margin="0,2"/>
            <Button x:Name="Weapon4Button" Content="Weapon 4" Click="WeaponSelection_Click" Tag="4" Margin="0,2"/>
            <Button x:Name="Weapon5Button" Content="Weapon 5" Click="WeaponSelection_Click" Tag="5" Margin="0,2"/>
            <Button x:Name="CancelWeaponButton" Content="Cancel" Click="CancelWeaponButton_Click" Margin="0,5"/>
        </StackPanel>
    </Grid>
</Window>